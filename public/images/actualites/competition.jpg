<svg width="800" height="500" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="podiumBg" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a2e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0a0a1e;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="gold" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#ffd700;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ffb700;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="silver" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#c0c0c0;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#a0a0a0;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="bronze" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#cd7f32;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ad5f12;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Fond -->
  <rect width="800" height="500" fill="url(#podiumBg)"/>

  <!-- Projecteurs -->
  <g opacity="0.1">
    <path d="M 300 0 L 250 500 L 350 500 Z" fill="#ffed00"/>
    <path d="M 500 0 L 450 500 L 550 500 Z" fill="#ffed00"/>
  </g>

  <!-- Titre "CHAMPIONNAT" -->
  <text x="400" y="60" font-family="Impact, Arial Black, sans-serif" font-size="48"
        fill="#ff6b00" text-anchor="middle" font-weight="bold" letter-spacing="4">
    CHAMPIONNAT
  </text>

  <!-- Podium - 2ème place (argent) -->
  <g transform="translate(150, 250)">
    <rect x="0" y="100" width="120" height="150" fill="#2a2a3a" stroke="url(#silver)" stroke-width="3"/>
    <circle cx="60" cy="60" r="45" fill="url(#silver)" stroke="#ffffff" stroke-width="3"/>
    <text x="60" y="75" font-family="Arial Black, sans-serif" font-size="48"
          fill="#1a1a2e" text-anchor="middle" font-weight="bold">2</text>
    <rect x="30" y="110" width="60" height="80" fill="#ff6b00" rx="3"/>
    <circle cx="60" cy="100" r="20" fill="#2a2a3a"/>
  </g>

  <!-- Podium - 1ère place (or) -->
  <g transform="translate(340, 180)">
    <rect x="0" y="100" width="120" height="220" fill="#2a2a3a" stroke="url(#gold)" stroke-width="4"/>
    <circle cx="60" cy="60" r="50" fill="url(#gold)" stroke="#ffffff" stroke-width="4"/>
    <text x="60" y="78" font-family="Arial Black, sans-serif" font-size="52"
          fill="#1a1a2e" text-anchor="middle" font-weight="bold">1</text>

    <!-- Couronne -->
    <g transform="translate(20, 10)">
      <polygon points="40,0 35,15 45,15" fill="#ffed00"/>
      <polygon points="50,5 45,20 55,20" fill="#ffed00"/>
      <polygon points="30,5 25,20 35,20" fill="#ffed00"/>
    </g>

    <rect x="30" y="120" width="60" height="90" fill="#ff6b00" rx="3"/>
    <circle cx="60" cy="110" r="22" fill="#2a2a3a"/>
  </g>

  <!-- Podium - 3ème place (bronze) -->
  <g transform="translate(530, 280)">
    <rect x="0" y="100" width="120" height="120" fill="#2a2a3a" stroke="url(#bronze)" stroke-width="3"/>
    <circle cx="60" cy="60" r="42" fill="url(#bronze)" stroke="#ffffff" stroke-width="3"/>
    <text x="60" y="73" font-family="Arial Black, sans-serif" font-size="46"
          fill="#1a1a2e" text-anchor="middle" font-weight="bold">3</text>
    <rect x="30" y="110" width="60" height="70" fill="#ff6b00" rx="3"/>
    <circle cx="60" cy="100" r="18" fill="#2a2a3a"/>
  </g>

  <!-- Drapeaux à damier -->
  <g transform="translate(50, 100)">
    <line x1="0" y1="0" x2="0" y2="120" stroke="#666" stroke-width="4"/>
    <rect x="5" y="0" width="20" height="20" fill="#fff"/>
    <rect x="25" y="0" width="20" height="20" fill="#0a0a0a"/>
    <rect x="5" y="20" width="20" height="20" fill="#0a0a0a"/>
    <rect x="25" y="20" width="20" height="20" fill="#fff"/>
    <rect x="5" y="40" width="20" height="20" fill="#fff"/>
    <rect x="25" y="40" width="20" height="20" fill="#0a0a0a"/>
  </g>

  <g transform="translate(710, 100)">
    <line x1="0" y1="0" x2="0" y2="120" stroke="#666" stroke-width="4"/>
    <rect x="-45" y="0" width="20" height="20" fill="#fff"/>
    <rect x="-25" y="0" width="20" height="20" fill="#0a0a0a"/>
    <rect x="-45" y="20" width="20" height="20" fill="#0a0a0a"/>
    <rect x="-25" y="20" width="20" height="20" fill="#fff"/>
    <rect x="-45" y="40" width="20" height="20" fill="#fff"/>
    <rect x="-25" y="40" width="20" height="20" fill="#0a0a0a"/>
  </g>

  <!-- Trophée stylisé -->
  <g transform="translate(360, 430)" opacity="0.3">
    <ellipse cx="40" cy="30" rx="30" ry="15" fill="#ffd700"/>
    <rect x="35" y="30" width="10" height="25" fill="#ffd700"/>
    <rect x="25" y="55" width="30" height="8" fill="#ffd700"/>
  </g>

  <!-- Confettis -->
  <g opacity="0.6" fill="#ff6b00">
    <rect x="100" y="150" width="8" height="12" transform="rotate(20 104 156)" rx="2"/>
    <rect x="680" y="180" width="8" height="12" transform="rotate(-15 684 186)" rx="2"/>
    <rect x="200" y="120" width="10" height="10" transform="rotate(45 205 125)" rx="2"/>
    <rect x="600" y="140" width="10" height="10" transform="rotate(-30 605 145)" rx="2"/>
  </g>
  <g opacity="0.6" fill="#00d4ff">
    <rect x="150" y="100" width="8" height="12" transform="rotate(35 154 106)" rx="2"/>
    <rect x="650" y="110" width="8" height="12" transform="rotate(-25 654 116)" rx="2"/>
    <rect x="250" y="90" width="10" height="10" transform="rotate(60 255 95)" rx="2"/>
    <rect x="550" y="100" width="10" height="10" transform="rotate(-40 555 105)" rx="2"/>
  </g>

  <!-- Texte "RÉSULTATS" -->
  <text x="400" y="470" font-family="Arial, sans-serif" font-size="24"
        fill="#00d4ff" text-anchor="middle" letter-spacing="6" opacity="0.8">
    RÉSULTATS
  </text>
</svg>
