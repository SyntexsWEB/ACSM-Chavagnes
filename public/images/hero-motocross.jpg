<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <!-- Fond dégradé dynamique -->
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a2e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0f0f1e;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="trackGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#2a1f1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a0f0a;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="bikeGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#ff6b00;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ff8c00;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="dustGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:#8b7355;stop-opacity:0" />
    </radialGradient>
  </defs>

  <!-- Ciel -->
  <rect width="1920" height="700" fill="url(#skyGradient)"/>

  <!-- Terrain/Piste -->
  <path d="M0 700 Q480 650 960 680 T1920 700 L1920 1080 L0 1080 Z" fill="url(#trackGradient)"/>

  <!-- Collines en arrière-plan -->
  <path d="M0 600 Q400 550 800 580 T1920 600 L1920 700 L0 700 Z" fill="#0a0a15" opacity="0.5"/>
  <path d="M0 650 Q300 620 600 640 T1920 650 L1920 700 L0 700 Z" fill="#15151f" opacity="0.6"/>

  <!-- Piste - lignes de texture -->
  <g opacity="0.2">
    <line x1="0" y1="750" x2="1920" y2="780" stroke="#000" stroke-width="2"/>
    <line x1="0" y1="820" x2="1920" y2="850" stroke="#000" stroke-width="2"/>
    <line x1="0" y1="900" x2="1920" y2="920" stroke="#000" stroke-width="2"/>
    <line x1="0" y1="980" x2="1920" y2="1000" stroke="#000" stroke-width="2"/>
  </g>

  <!-- Motocross stylisé (silhouette) -->
  <g transform="translate(800, 500)">
    <!-- Nuage de poussière -->
    <ellipse cx="-50" cy="100" rx="120" ry="60" fill="url(#dustGradient)"/>
    <ellipse cx="-80" cy="110" rx="80" ry="40" fill="url(#dustGradient)"/>

    <!-- Roue arrière -->
    <circle cx="0" cy="100" r="45" fill="#1a1a1a" stroke="#ff6b00" stroke-width="4"/>
    <circle cx="0" cy="100" r="35" fill="none" stroke="#ff8c00" stroke-width="2"/>
    <circle cx="0" cy="100" r="25" fill="none" stroke="#ff6b00" stroke-width="1"/>

    <!-- Cadre de la moto -->
    <path d="M 0 100 L 60 80 L 100 70 L 120 75 L 110 95 L 90 100"
          fill="url(#bikeGradient)" stroke="#ff8c00" stroke-width="3"/>
    <path d="M 60 80 L 70 50 L 85 45" fill="none" stroke="#ff6b00" stroke-width="4"/>

    <!-- Roue avant -->
    <circle cx="120" cy="100" r="40" fill="#1a1a1a" stroke="#ff6b00" stroke-width="4"/>
    <circle cx="120" cy="100" r="30" fill="none" stroke="#ff8c00" stroke-width="2"/>
    <circle cx="120" cy="100" r="20" fill="none" stroke="#ff6b00" stroke-width="1"/>

    <!-- Pilote (silhouette simplifiée) -->
    <ellipse cx="50" cy="50" rx="18" ry="22" fill="#0a0a0a"/>
    <rect x="40" y="55" width="20" height="35" fill="#ff6b00" rx="3"/>
    <rect x="35" y="70" width="10" height="25" fill="#0a0a0a" rx="2"/>
    <rect x="55" y="70" width="10" height="25" fill="#0a0a0a" rx="2"/>

    <!-- Guidon -->
    <path d="M 85 45 L 100 40 M 85 45 L 100 50" stroke="#1a1a1a" stroke-width="3" fill="none"/>
  </g>

  <!-- Drapeaux à damier stylisés -->
  <g transform="translate(1600, 300)">
    <rect x="0" y="0" width="30" height="30" fill="#fff"/>
    <rect x="30" y="0" width="30" height="30" fill="#0a0a0a"/>
    <rect x="0" y="30" width="30" height="30" fill="#0a0a0a"/>
    <rect x="30" y="30" width="30" height="30" fill="#fff"/>
    <rect x="60" y="30" width="30" height="30" fill="#0a0a0a"/>
    <rect x="60" y="0" width="30" height="30" fill="#fff"/>
    <line x1="0" y1="60" x2="0" y2="200" stroke="#666" stroke-width="4"/>
  </g>

  <!-- Projecteurs de lumière -->
  <g opacity="0.1">
    <path d="M 400 0 L 350 700 L 450 700 Z" fill="#ffed00"/>
    <path d="M 1200 0 L 1150 700 L 1250 700 Z" fill="#00d4ff"/>
  </g>

  <!-- Particules de poussière -->
  <g opacity="0.3" fill="#8b7355">
    <circle cx="650" cy="550" r="3"/>
    <circle cx="720" cy="580" r="2"/>
    <circle cx="690" cy="600" r="2.5"/>
    <circle cx="780" cy="620" r="2"/>
    <circle cx="850" cy="590" r="3"/>
    <circle cx="920" cy="610" r="2"/>
  </g>

  <!-- Texte ACSM en filigrane -->
  <text x="960" y="900" font-family="Arial Black, sans-serif" font-size="180"
        fill="#ff6b00" opacity="0.15" text-anchor="middle" font-weight="bold">
    ACSM
  </text>

  <!-- Sous-titre Chavagnes -->
  <text x="960" y="980" font-family="Arial, sans-serif" font-size="60"
        fill="#00d4ff" opacity="0.15" text-anchor="middle" letter-spacing="8">
    CHAVAGNES
  </text>
</svg>
