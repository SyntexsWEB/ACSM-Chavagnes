---
interface Props {
  question: string;
  index: number;
}

const { question, index } = Astro.props;
---

<div class="accordion-item">
  <button class="accordion-header" aria-expanded="false" aria-controls={`accordion-${index}`}>
    <span class="accordion-question">{question}</span>
    <svg class="accordion-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>
  <div class="accordion-content" id={`accordion-${index}`}>
    <div class="accordion-body">
      <slot />
    </div>
  </div>
</div>

<style>
  .accordion-item {
    background: var(--color-dark-lighter);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    margin-bottom: var(--spacing-md);
    overflow: hidden;
    transition: all var(--transition-normal);
  }

  .accordion-item:hover {
    border-color: var(--color-primary);
  }

  .accordion-header {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md) var(--spacing-lg);
    background: transparent;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: all var(--transition-fast);
  }

  .accordion-header:hover {
    background: var(--color-dark);
  }

  .accordion-question {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text);
    flex: 1;
    padding-right: var(--spacing-md);
  }

  .accordion-icon {
    width: 24px;
    height: 24px;
    color: var(--color-primary);
    transition: transform var(--transition-normal);
    flex-shrink: 0;
  }

  .accordion-header[aria-expanded="true"] .accordion-icon {
    transform: rotate(180deg);
  }

  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height var(--transition-normal) ease-out;
  }

  .accordion-header[aria-expanded="true"] + .accordion-content {
    max-height: 2000px;
    transition: max-height var(--transition-normal) ease-in;
  }

  .accordion-body {
    padding: 0 var(--spacing-lg) var(--spacing-lg);
    color: var(--color-text-secondary);
    line-height: 1.8;
  }

  .accordion-body :global(p) {
    margin-bottom: var(--spacing-md);
  }

  .accordion-body :global(ul),
  .accordion-body :global(ol) {
    margin: var(--spacing-md) 0;
    padding-left: var(--spacing-lg);
  }

  .accordion-body :global(li) {
    margin-bottom: var(--spacing-xs);
  }

  .accordion-body :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  .accordion-body :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .accordion-body :global(a:hover) {
    color: var(--color-primary-light);
  }

  @media (max-width: 768px) {
    .accordion-header {
      padding: var(--spacing-sm) var(--spacing-md);
    }

    .accordion-question {
      font-size: 1rem;
    }

    .accordion-body {
      padding: 0 var(--spacing-md) var(--spacing-md);
    }
  }
</style>
