---
interface Props {
  titre: string;
  date: Date;
  description: string;
  image?: string;
  slug: string;
}

const { titre, date, description, image, slug } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('fr-FR', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
}).format(date);
---

<article class="actualite-card card">
  {image && (
    <div class="actualite-image">
      <img src={image} alt={titre} loading="lazy" />
    </div>
  )}
  <div class="actualite-content">
    <time class="actualite-date" datetime={date.toISOString()}>
      {formattedDate}
    </time>
    <h3 class="actualite-titre">{titre}</h3>
    <p class="actualite-description">{description}</p>
    <a href={`/actualites/${slug}`} class="actualite-link">
      Lire la suite
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </a>
  </div>
</article>

<style>
  .actualite-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    overflow: hidden;
    padding: 0;
  }

  .actualite-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-radius: var(--radius-md) var(--radius-md) 0 0;
  }

  .actualite-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .actualite-card:hover .actualite-image img {
    transform: scale(1.05);
  }

  .actualite-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: var(--spacing-lg);
  }

  .actualite-date {
    font-size: 0.85rem;
    color: var(--color-primary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-xs);
  }

  .actualite-titre {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .actualite-description {
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
    flex: 1;
    line-height: 1.6;
  }

  .actualite-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--color-primary);
    font-weight: 600;
    transition: gap var(--transition-fast);
  }

  .actualite-link:hover {
    gap: var(--spacing-sm);
  }

  .actualite-link svg {
    transition: transform var(--transition-fast);
  }

  .actualite-link:hover svg {
    transform: translateX(4px);
  }
</style>
