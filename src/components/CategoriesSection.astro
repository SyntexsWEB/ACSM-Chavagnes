---
import siteInfo from '../data/site-info.json';
---

<section class="categories-section">
  <div class="container">
    <h2 class="section-title">Catégories et planning</h2>

    <div class="categories-grid">
      <!-- Carte Samedi -->
      <div class="category-card samedi-card">
        <div class="category-background">
          <div class="category-overlay"></div>
        </div>
        <div class="category-content">
          <div class="category-day-badge">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <span>{siteInfo.categories?.samedi?.jour || "Samedi"}</span>
          </div>

          <h3 class="category-title">{siteInfo.categories?.samedi?.titre || "Pilotes débutants"}</h3>

          <ul class="category-list">
            {(siteInfo.categories?.samedi?.liste || ['Minicross', '85cc débutant']).map((cat: string) => (
              <li>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{cat}</span>
              </li>
            ))}
          </ul>

          <div class="category-time">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{siteInfo.horaires.samedi}</span>
          </div>
        </div>
      </div>

      <!-- Carte Dimanche -->
      <div class="category-card dimanche-card">
        <div class="category-background">
          <div class="category-overlay"></div>
        </div>
        <div class="category-content">
          <div class="category-day-badge dimanche-badge">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <span>{siteInfo.categories?.dimanche?.jour || "Dimanche"}</span>
          </div>

          <h3 class="category-title">{siteInfo.categories?.dimanche?.titre || "Pilotes confirmés"}</h3>

          <ul class="category-list">
            {(siteInfo.categories?.dimanche?.liste || ['85cc confirmés', '125cc', 'MX1 & MX2', 'Quad & Side-car']).map((cat: string) => (
              <li>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{cat}</span>
              </li>
            ))}
          </ul>

          <div class="category-time">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{siteInfo.horaires.dimanche}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .categories-section {
    background: var(--color-dark);
    padding: var(--spacing-2xl) 0;
    position: relative;
  }

  .section-title {
    text-align: center;
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-xl);
    color: var(--color-text);
    font-weight: 700;
    position: relative;
    padding-bottom: var(--spacing-md);
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--color-primary);
    border-radius: 2px;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-xl);
  }

  .category-card {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
    min-height: 400px;
    transition: all var(--transition-normal);
    border: 2px solid transparent;
  }

  .category-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }

  .category-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .samedi-card .category-background {
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary-darker) 100%);
  }

  .dimanche-card .category-background {
    background: linear-gradient(135deg, var(--color-secondary-dark) 0%, var(--color-secondary-darker) 100%);
  }

  .category-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      radial-gradient(circle at 20% 50%, rgba(255, 184, 0, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(255, 184, 0, 0.1) 0%, transparent 50%);
  }

  .dimanche-card .category-overlay {
    background:
      radial-gradient(circle at 20% 50%, rgba(107, 142, 35, 0.2) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(107, 142, 35, 0.15) 0%, transparent 50%);
  }

  .category-content {
    position: relative;
    z-index: 1;
    padding: var(--spacing-xl);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .category-day-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-md);
    font-weight: 700;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: white;
    width: fit-content;
    margin-bottom: var(--spacing-md);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .category-day-badge svg {
    width: 20px;
    height: 20px;
  }

  .category-title {
    font-size: 1.75rem;
    color: white;
    margin-bottom: var(--spacing-lg);
    font-weight: 800;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .category-list {
    list-style: none;
    margin-bottom: var(--spacing-lg);
    flex: 1;
  }

  .category-list li {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) 0;
    color: white;
    font-size: 1.05rem;
    font-weight: 500;
  }

  .category-list li svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: rgba(255, 255, 255, 0.9);
  }

  .category-time {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    background: rgba(0, 0, 0, 0.3);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    margin-top: auto;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .category-time svg {
    width: 24px;
    height: 24px;
    color: white;
  }

  .category-time span {
    color: white;
    font-weight: 700;
    font-size: 1.1rem;
  }

  .samedi-card:hover {
    border-color: var(--color-primary);
  }

  .dimanche-card:hover {
    border-color: var(--color-secondary);
  }

  @media (max-width: 768px) {
    .categories-section {
      padding: var(--spacing-xl) 0;
    }

    .categories-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .category-card {
      min-height: 350px;
    }

    .category-content {
      padding: var(--spacing-lg);
    }
  }
</style>
