---
interface Props {
  image: string;
  titre: string;
  description: string;
  date: Date;
  slug: string;
}

const {
  image,
  titre,
  description,
  date,
  slug
} = Astro.props;

// Formater la date
const formattedDate = new Intl.DateTimeFormat('fr-FR', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
}).format(date);
---

<section class="featured-news-section">
  <div class="featured-news-background">
    <img src={image} alt={titre} />
    <div class="featured-news-overlay"></div>
  </div>

  <div class="featured-news-content">
    <div class="container">
      <div class="featured-news-text">
        <div class="featured-news-header">
          <h2 class="featured-news-subtitle">ACTUALITÉ</h2>
          <h3 class="featured-news-title">À LA UNE</h3>
          <div class="title-underline"></div>
        </div>

        <div class="news-meta">
          <span class="news-date">{formattedDate}</span>
        </div>

        <h4 class="news-article-title">{titre}</h4>
        <p class="featured-news-description">{description}</p>

        <div class="featured-news-buttons">
          <a href={`/actualites/${slug}`} class="featured-news-btn-primary">
            Voir cette actualité
          </a>
          <a href="/actualites" class="featured-news-btn-secondary">
            Toutes les actualités
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .featured-news-section {
    position: relative;
    min-height: 700px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .featured-news-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .featured-news-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .featured-news-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(10, 10, 10, 0.9) 0%,
      rgba(10, 10, 10, 0.7) 50%,
      rgba(10, 10, 10, 0.4) 100%
    );
  }

  .featured-news-content {
    position: relative;
    z-index: 1;
    width: 100%;
    padding: var(--spacing-2xl) 0;
  }

  .featured-news-text {
    max-width: 800px;
  }

  .featured-news-header {
    margin-bottom: var(--spacing-md);
  }

  .featured-news-subtitle {
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 700;
    color: white;
    margin-bottom: var(--spacing-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .featured-news-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    color: white;
    line-height: 1.1;
    margin-bottom: var(--spacing-md);
    text-transform: uppercase;
    letter-spacing: -0.02em;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.7);
  }

  .title-underline {
    width: 80px;
    height: 4px;
    background: var(--color-primary);
    border-radius: 2px;
  }

  .news-meta {
    margin-bottom: var(--spacing-md);
  }

  .news-date {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-primary);
    color: white;
    font-size: 0.9rem;
    font-weight: 600;
    border-radius: var(--radius-md);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .news-article-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: white;
    margin-bottom: var(--spacing-md);
    line-height: 1.3;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .featured-news-description {
    font-size: 1.15rem;
    line-height: 1.9;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: var(--spacing-xl);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .featured-news-buttons {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .featured-news-btn-primary {
    display: inline-block;
    padding: var(--spacing-md) var(--spacing-xl);
    background: var(--color-primary);
    color: white;
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-lg);
    font-weight: 700;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all var(--transition-normal);
    text-shadow: none;
  }

  .featured-news-btn-primary:hover {
    background: transparent;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px var(--shadow-primary-strong);
  }

  .featured-news-btn-secondary {
    display: inline-block;
    padding: var(--spacing-md) var(--spacing-xl);
    background: transparent;
    color: white;
    border: 2px solid white;
    border-radius: var(--radius-lg);
    font-weight: 700;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all var(--transition-normal);
    text-shadow: none;
  }

  .featured-news-btn-secondary:hover {
    background: white;
    color: var(--color-dark);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.3);
  }

  @media (max-width: 768px) {
    .featured-news-section {
      min-height: 600px;
    }

    .featured-news-overlay {
      background: linear-gradient(
        135deg,
        rgba(10, 10, 10, 0.85) 0%,
        rgba(10, 10, 10, 0.75) 100%
      );
    }

    .featured-news-text {
      max-width: 100%;
    }

    .featured-news-description {
      font-size: 1rem;
    }

    .featured-news-buttons {
      flex-direction: column;
    }

    .featured-news-btn-primary,
    .featured-news-btn-secondary {
      width: 100%;
      text-align: center;
    }
  }
</style>
