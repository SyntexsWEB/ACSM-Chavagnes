---
interface Props {
  soustitre: string;
  titreLigne1: string;
  titreLigne2: string;
  description: string;
  image?: string;
  bouton1?: {
    texte: string;
    lien: string;
  };
  bouton2?: {
    texte: string;
    lien: string;
  };
}

const { soustitre, titreLigne1, titreLigne2, description, image, bouton1, bouton2 } = Astro.props;
---

<section class="hero">
  {image && (
    <div class="hero-bg">
      <img src={image} alt="" />
      <div class="hero-overlay"></div>
    </div>
  )}
  <div class="container">
    <div class="hero-content">
      {soustitre && <p class="hero-subtitle">{soustitre}</p>}
      <h1 class="hero-title">
        <span class="title-line title-white">{titreLigne1}</span>
        <span class="title-line title-green">{titreLigne2}</span>
      </h1>
      <div class="title-underline"></div>
      <p class="hero-description">{description}</p>
      <div class="hero-buttons">
        {bouton1 && (
          <a href={bouton1.lien} class="btn btn-hero-primary">{bouton1.texte}</a>
        )}
        {bouton2 && (
          <a href={bouton2.lien} class="btn btn-hero-secondary">{bouton2.texte}</a>
        )}
      </div>
    </div>
  </div>
  <div class="hero-scroll">
    <svg width="30" height="30" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 5V19M12 19L5 12M12 19L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 85vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: var(--spacing-2xl) 0;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.5) saturate(1.1);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, var(--overlay-dark-light) 0%, var(--overlay-dark-medium-2) 100%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 1100px;
    margin: 0 auto;
    animation: fadeIn 1s ease-out;
  }

  .hero-subtitle {
    font-size: clamp(0.9rem, 1.5vw, 1.1rem);
    color: var(--hero-subtitle-color);
    margin-bottom: var(--spacing-md);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  .hero-title {
    font-family: 'Montserrat', sans-serif;
    font-weight: 900;
    margin-bottom: var(--spacing-md);
    line-height: 0.85;
    letter-spacing: -0.02em;
    text-transform: uppercase;
    color: var(--hero-title-color);
    text-shadow: 0 4px 40px var(--hero-text-shadow), 0 2px 10px var(--hero-text-shadow-subtle);
  }

  .title-line {
    display: block;
  }

  .title-white {
    color: var(--hero-title-color);
    font-size: clamp(3.5rem, 12vw, 9rem);
  }

  .title-green {
    color: var(--color-primary);
    text-shadow: 0 0 15px rgba(185, 28, 28, 0.3), 0 4px 40px var(--hero-text-shadow);
    font-size: clamp(1.5rem, 4.5vw, 3.5rem);
    margin-top: 0.5rem;
    letter-spacing: 0.05em;
  }

  .title-underline {
    width: 100px;
    height: 5px;
    background: var(--color-primary);
    margin: var(--spacing-lg) auto;
    border-radius: 2px;
  }

  .hero-description {
    font-size: clamp(1.05rem, 2vw, 1.2rem);
    color: var(--hero-description-color);
    margin-bottom: var(--spacing-xl);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
    line-height: 1.7;
    text-shadow: 0 2px 10px var(--hero-text-shadow-subtle);
  }

  .hero-buttons {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
    justify-content: center;
  }

  .btn-hero-primary {
    font-size: 0.9rem;
    padding: 1rem 2rem;
    background: var(--color-primary);
    color: white;
    font-weight: 700;
    border-radius: var(--radius-md);
    transition: all var(--transition-normal);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 2px solid var(--color-primary);
  }

  .btn-hero-primary:hover {
    background: transparent;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(185, 28, 28, 0.3);
    color: white;
    border-color: var(--color-primary);
  }

  .btn-hero-secondary {
    font-size: 0.9rem;
    padding: 1rem 2rem;
    background: transparent;
    color: white;
    font-weight: 700;
    border: 2px solid white;
    border-radius: var(--radius-md);
    transition: all var(--transition-normal);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .btn-hero-secondary:hover {
    background: white;
    color: var(--color-dark);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.3);
  }

  .hero-scroll {
    position: absolute;
    bottom: var(--spacing-lg);
    left: 50%;
    transform: translateX(-50%);
    color: var(--color-text-secondary);
    animation: bounce 2s infinite;
    cursor: pointer;
    z-index: 1;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translate(-50%, 0);
    }
    50% {
      transform: translate(-50%, 10px);
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 70vh;
      padding: var(--spacing-xl) 0;
    }

    .hero-content {
      text-align: center;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .hero-buttons {
      justify-content: center;
    }
  }
</style>
