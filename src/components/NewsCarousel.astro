---
interface Actualite {
  slug: string;
  data: {
    titre: string;
    description: string;
    date: Date;
    image: string;
  };
}

interface Props {
  actualites: Actualite[];
  titre?: string;
  soustitre?: string;
  lienTexte?: string;
  lienUrl?: string;
}

const {
  actualites,
  titre = "ACTUALITÉS",
  soustitre = "Les dernières nouvelles de l'ACSM Chavagnes",
  lienTexte = "VOIR TOUTES LES ACTUALITÉS",
  lienUrl = "/actualites"
} = Astro.props;
---

<section class="news-carousel-section">
  <div class="carousel-header">
    <div class="header-left">
      <h2 class="carousel-title">MX-{titre}</h2>
      <div class="header-underline"></div>
      <p class="carousel-subtitle">{soustitre}</p>
    </div>
    <a href={lienUrl} class="voir-tout-link">
      {lienTexte}
      <span class="voir-tout-arrow">→</span>
    </a>
  </div>

  <div class="carousel-wrapper">
    <div class="carousel-track" id="news-carousel-track">
      {actualites.map((actualite) => (
        <article class="news-slide">
          <div class="slide-image">
            <img src={actualite.data.image} alt={actualite.data.titre} />
          </div>
          <div class="slide-content">
            <p class="slide-description">"{actualite.data.description}"</p>
            <div class="slide-footer">
              <span class="slide-title">{actualite.data.titre}</span>
              <time class="slide-date">
                {new Intl.DateTimeFormat('fr-FR', {
                  day: 'numeric',
                  month: 'long',
                  year: 'numeric'
                }).format(actualite.data.date)}
              </time>
            </div>
          </div>
          <a href={`/actualites/${actualite.slug}`} class="slide-link-overlay" aria-label={`Lire ${actualite.data.titre}`}></a>
        </article>
      ))}
    </div>
  </div>

  <div class="carousel-controls">
    <button class="carousel-btn prev" id="carousel-prev" aria-label="Précédent">
      ←
    </button>
    <button class="carousel-btn next" id="carousel-next" aria-label="Suivant">
      →
    </button>
  </div>
</section>

<style>
  .news-carousel-section {
    background: var(--color-dark);
    padding: var(--spacing-2xl) 0;
    overflow: hidden;
  }

  .carousel-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    padding: 0 var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
  }

  .header-left {
    flex: 1;
  }

  .header-left p:last-child {
    margin-bottom: 0;
  }

  .carousel-title {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    font-weight: 900;
    color: var(--color-text);
    letter-spacing: 0.05em;
    margin: 0 0 var(--spacing-xs) 0;
    text-transform: uppercase;
  }

  .header-underline {
    width: 60px;
    height: 4px;
    background: var(--color-primary);
    margin-bottom: var(--spacing-md);
    border-radius: 2px;
  }

  .carousel-subtitle {
    font-size: 1.1rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .voir-tout-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--color-text);
    font-weight: 600;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    padding-bottom: 4px;
    transition: all var(--transition-fast);
  }

  .voir-tout-arrow {
    display: inline-block;
    opacity: 0;
    transform: translateX(-8px);
    transition: all var(--transition-fast);
  }

  .voir-tout-link:hover {
    color: var(--color-primary);
    border-color: var(--color-primary);
  }

  .voir-tout-link:hover .voir-tout-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .carousel-wrapper {
    overflow: visible;
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
  }

  .carousel-track {
    display: flex;
    gap: var(--spacing-2xl);
    transition: transform 0.5s ease-in-out;
    will-change: transform;
    padding-left: var(--spacing-xl);
  }

  .news-slide {
    position: relative;
    flex: 0 0 650px;
    min-height: 400px;
    background: var(--color-steel);
    border-radius: 24px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: all var(--transition-normal);
  }

  .news-slide:hover {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .slide-image {
    width: 100%;
    height: 250px;
    overflow: hidden;
  }

  .slide-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .news-slide:hover .slide-image img {
    transform: scale(1.05);
  }

  .slide-content {
    padding: var(--spacing-2xl);
    display: flex;
    flex-direction: column;
    flex: 1;
    justify-content: space-between;
  }

  .slide-description {
    font-size: clamp(1.1rem, 2vw, 1.35rem);
    color: var(--color-text);
    line-height: 1.8;
    margin: 0 0 var(--spacing-xl) 0;
    flex: 1;
  }

  .slide-footer {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .slide-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .slide-date {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  .slide-link-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .carousel-controls {
    display: flex;
    gap: var(--spacing-sm);
    padding: var(--spacing-xl) var(--spacing-xl) 0;
    max-width: 1400px;
    margin: 0 auto;
  }

  .carousel-btn {
    width: 48px;
    height: 48px;
    border: none;
    background: transparent;
    color: var(--color-text);
    font-size: 1.5rem;
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel-btn:hover {
    color: var(--color-primary);
  }

  @media (max-width: 1200px) {
    .news-slide {
      flex: 0 0 600px;
      min-height: 350px;
    }
  }

  @media (max-width: 768px) {
    .carousel-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-md);
      padding: 0 var(--spacing-md);
    }

    .carousel-track {
      padding-left: var(--spacing-md);
    }

    .news-slide {
      flex: 0 0 280px;
      min-height: 300px;
    }

    .slide-content {
      padding: var(--spacing-xl);
    }

    .slide-description {
      font-size: 1rem;
    }

    .carousel-controls {
      justify-content: center;
      padding: var(--spacing-lg) var(--spacing-md) 0;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const track = document.getElementById('news-carousel-track');
    const prevBtn = document.getElementById('carousel-prev');
    const nextBtn = document.getElementById('carousel-next');

    if (!track || !prevBtn || !nextBtn) return;

    const slides = track.querySelectorAll('.news-slide');
    if (slides.length === 0) return;

    let currentIndex = 0;
    let autoplayInterval: ReturnType<typeof setInterval>;

    const updateCarousel = () => {
      const slideWidth = (slides[0] as HTMLElement).offsetWidth;
      const gap = 48; // var(--spacing-2xl)
      const offset = currentIndex * (slideWidth + gap);
      track.style.transform = `translateX(-${offset}px)`;
    };

    const nextSlide = () => {
      const maxIndex = slides.length - 1;
      currentIndex = currentIndex >= maxIndex ? 0 : currentIndex + 1;
      updateCarousel();
    };

    const prevSlide = () => {
      const maxIndex = slides.length - 1;
      currentIndex = currentIndex <= 0 ? maxIndex : currentIndex - 1;
      updateCarousel();
    };

    const startAutoplay = () => {
      autoplayInterval = setInterval(nextSlide, 5000);
    };

    const stopAutoplay = () => {
      clearInterval(autoplayInterval);
    };

    prevBtn.addEventListener('click', () => {
      prevSlide();
      stopAutoplay();
      startAutoplay();
    });

    nextBtn.addEventListener('click', () => {
      nextSlide();
      stopAutoplay();
      startAutoplay();
    });

    track.addEventListener('mouseenter', stopAutoplay);
    track.addEventListener('mouseleave', startAutoplay);

    window.addEventListener('resize', updateCarousel);

    updateCarousel();
    startAutoplay();
  });
</script>
