---
interface Video {
  src: string;
  titre?: string;
  poster: string;
}

interface Props {
  videos: Video[];
  titre?: string;
  description?: string;
}

const { videos, titre = "Vidéos", description } = Astro.props;
---

<section class="video-gallery-section">
  <div class="container">
    {titre && <h2 class="gallery-title">{titre}</h2>}
    {description && <p class="gallery-description">{description}</p>}

    <div class="gallery-grid">
      {videos.map((video, index) => (
        <div class="gallery-item" data-index={index} data-video-src={video.src} data-poster={video.poster}>
          <video
            src={video.src}
            poster={video.poster}
            preload="none"
            muted
            playsinline
            loop
          ></video>
          <div class="play-overlay">
            <div class="play-button">
              <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
                <circle cx="32" cy="32" r="32" fill="rgba(255,255,255,0.9)"/>
                <path d="M26 20L46 32L26 44V20Z" fill="currentColor"/>
              </svg>
            </div>
          </div>
          {video.titre && <div class="video-caption">{video.titre}</div>}
        </div>
      ))}
    </div>
  </div>

  <!-- Lightbox Modal -->
  <div id="video-lightbox" class="lightbox">
    <button class="lightbox-close" aria-label="Fermer">&times;</button>
    <button class="lightbox-prev" aria-label="Précédent">&#10094;</button>
    <button class="lightbox-next" aria-label="Suivant">&#10095;</button>
    <div class="lightbox-content">
      <video id="lightbox-video" controls playsinline>
        <source src="" type="video/mp4">
        Votre navigateur ne supporte pas la lecture de vidéos.
      </video>
      <div id="lightbox-caption" class="lightbox-caption"></div>
    </div>
    <div class="lightbox-counter"></div>
  </div>
</section>

<style>
  .video-gallery-section {
    padding: var(--spacing-2xl) 0;
    background: var(--color-dark);
  }

  .gallery-title {
    text-align: center;
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
    font-weight: 700;
    position: relative;
    padding-bottom: var(--spacing-md);
  }

  .gallery-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--color-primary);
    border-radius: 2px;
  }

  .gallery-description {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--spacing-xl);
    color: var(--color-text-secondary);
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
    max-width: 1200px;
    margin: var(--spacing-xl) auto 0;
  }

  .gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-md);
    cursor: pointer;
    aspect-ratio: 9 / 16;
    background: var(--color-steel);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .gallery-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }

  .gallery-item video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    pointer-events: none;
  }

  .play-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.2);
    transition: all var(--transition-normal);
    pointer-events: none;
  }

  .gallery-item:hover .play-overlay {
    background: rgba(0, 0, 0, 0.1);
  }

  .gallery-item.playing .play-overlay {
    opacity: 0;
  }

  .play-button {
    color: #1a1a1a;
    transform: scale(1);
    transition: all var(--transition-normal);
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
    opacity: 1;
  }

  .gallery-item:hover .play-button {
    transform: scale(1.15);
  }

  .gallery-item.playing .play-button {
    opacity: 0;
  }

  .video-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
    color: white;
    padding: var(--spacing-lg) var(--spacing-md) var(--spacing-md);
    font-size: 0.95rem;
    font-weight: 600;
    transform: translateY(100%);
    transition: transform var(--transition-normal);
  }

  .gallery-item:hover .video-caption {
    transform: translateY(0);
  }

  /* Lightbox styles */
  .lightbox {
    display: none;
    position: fixed;
    z-index: 9999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.95);
    align-items: center;
    justify-content: center;
  }

  .lightbox.active {
    display: flex;
  }

  .lightbox-content {
    max-width: 90%;
    max-height: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  #lightbox-video {
    max-width: 100%;
    max-height: 85vh;
    object-fit: contain;
    border-radius: var(--radius-md);
    background: black;
  }

  .lightbox-caption {
    color: white;
    text-align: center;
    padding: var(--spacing-md);
    font-size: 1.1rem;
    font-weight: 600;
    margin-top: var(--spacing-sm);
  }

  .lightbox-close,
  .lightbox-prev,
  .lightbox-next {
    position: absolute;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
    font-size: 2rem;
    cursor: pointer;
    padding: var(--spacing-md);
    transition: background var(--transition-fast);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-sm);
    z-index: 10000;
  }

  .lightbox-close:hover,
  .lightbox-prev:hover,
  .lightbox-next:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .lightbox-close {
    top: 20px;
    right: 20px;
    font-size: 2.5rem;
    line-height: 1;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lightbox-prev {
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
  }

  .lightbox-next {
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
  }

  .lightbox-counter {
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    background: rgba(0, 0, 0, 0.5);
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-sm);
    font-size: 0.9rem;
    z-index: 10000;
  }

  @media (max-width: 1024px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
    }
  }

  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .lightbox-prev,
    .lightbox-next {
      font-size: 1.5rem;
      padding: var(--spacing-sm);
    }

    .lightbox-close {
      font-size: 2rem;
      width: 40px;
      height: 40px;
      top: 10px;
      right: 10px;
    }

    #lightbox-video {
      max-height: 80vh;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Lightbox functionality
    const galleryItems = document.querySelectorAll('.video-gallery-section .gallery-item');
    const lightbox = document.getElementById('video-lightbox');
    const lightboxVideo = document.getElementById('lightbox-video');
    const lightboxCaption = document.getElementById('lightbox-caption');
    const lightboxClose = document.querySelector('.video-gallery-section .lightbox-close');
    const lightboxPrev = document.querySelector('.video-gallery-section .lightbox-prev');
    const lightboxNext = document.querySelector('.video-gallery-section .lightbox-next');
    const lightboxCounter = document.querySelector('.video-gallery-section .lightbox-counter');

    if (!galleryItems.length || !lightbox || !lightboxVideo) {
      console.log('Video gallery elements not found');
      return;
    }

    let currentIndex = 0;
    const videos = [];

    // Collect videos data
    galleryItems.forEach((item, index) => {
      const videoSrc = item.getAttribute('data-video-src');
      const caption = item.querySelector('.video-caption');
      const thumbnailVideo = item.querySelector('video');

      if (videoSrc) {
        videos.push({
          src: videoSrc,
          titre: caption?.textContent || `Vidéo ${index + 1}`
        });
      }

      // Hover effect - play thumbnail video
      item.addEventListener('mouseenter', () => {
        if (thumbnailVideo) {
          // Charger et lancer la vidéo au survol
          thumbnailVideo.load();
          thumbnailVideo.play().then(() => {
            item.classList.add('playing');
          }).catch(() => {
            // Silently handle autoplay errors
          });
        }
      });

      item.addEventListener('mouseleave', () => {
        if (thumbnailVideo) {
          thumbnailVideo.pause();
          thumbnailVideo.currentTime = 0;
          // Remettre le poster en rechargeant la vidéo
          thumbnailVideo.load();
          item.classList.remove('playing');
        }
      });

      item.addEventListener('click', () => {
        openLightbox(index);
      });
    });

    function openLightbox(index) {
      currentIndex = index;
      updateLightbox();
      lightbox.classList.add('active');
      document.body.style.overflow = 'hidden';

      // Play video when opened
      if (lightboxVideo) {
        setTimeout(() => {
          lightboxVideo.play().catch(() => {
            console.log('Autoplay prevented');
          });
        }, 100);
      }
    }

    function closeLightbox() {
      lightbox.classList.remove('active');
      document.body.style.overflow = '';

      // Pause and reset video
      if (lightboxVideo) {
        lightboxVideo.pause();
        lightboxVideo.currentTime = 0;
      }
    }

    function updateLightbox() {
      const video = videos[currentIndex];

      // Pause current video before switching
      if (lightboxVideo) {
        lightboxVideo.pause();
        const source = lightboxVideo.querySelector('source');
        if (source) {
          source.src = video.src;
          lightboxVideo.load();
        }
      }

      if (lightboxCaption) lightboxCaption.textContent = video.titre || '';
      if (lightboxCounter) {
        lightboxCounter.textContent = `${currentIndex + 1} / ${videos.length}`;
      }
    }

    function showNext() {
      currentIndex = (currentIndex + 1) % videos.length;
      updateLightbox();
      setTimeout(() => {
        lightboxVideo?.play().catch(() => {});
      }, 100);
    }

    function showPrev() {
      currentIndex = (currentIndex - 1 + videos.length) % videos.length;
      updateLightbox();
      setTimeout(() => {
        lightboxVideo?.play().catch(() => {});
      }, 100);
    }

    // Event listeners
    if (lightboxClose) {
      lightboxClose.addEventListener('click', closeLightbox);
    }
    if (lightboxNext) {
      lightboxNext.addEventListener('click', showNext);
    }
    if (lightboxPrev) {
      lightboxPrev.addEventListener('click', showPrev);
    }

    // Close on background click
    lightbox.addEventListener('click', (e) => {
      if (e.target === lightbox) {
        closeLightbox();
      }
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (!lightbox.classList.contains('active')) return;

      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowRight') showNext();
      if (e.key === 'ArrowLeft') showPrev();
    });
  });
</script>
