---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const actualites = await getCollection('actualites');
  return actualites
    .filter(a => a.data.publie)
    .map(actualite => ({
      params: { slug: actualite.slug },
      props: { actualite },
    }));
}

const { actualite } = Astro.props;
const { Content } = await actualite.render();

const formattedDate = new Intl.DateTimeFormat('fr-FR', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
}).format(actualite.data.date);
---

<Layout
  titre={actualite.data.titre}
  description={actualite.data.description}
>
  <article class="actualite-detail">
    {actualite.data.image && (
      <div class="actualite-hero">
        <img src={actualite.data.image} alt={actualite.data.titre} />
        <div class="actualite-hero-overlay"></div>
      </div>
    )}

    <div class="container">
      <div class="actualite-content">
        <div class="actualite-back">
          <a href="/actualites" class="back-link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M19 12H5M5 12L12 19M5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Retour aux actualités
          </a>
        </div>

        <header class="actualite-header">
          <div class="actualite-meta">
            <time datetime={actualite.data.date.toISOString()}>
              {formattedDate}
            </time>
            <span class="separator">•</span>
            <span class="auteur">{actualite.data.auteur}</span>
          </div>
          <h1>{actualite.data.titre}</h1>
          <p class="actualite-description">{actualite.data.description}</p>
        </header>

        <div class="actualite-body prose">
          <Content />
        </div>

        <footer class="actualite-footer">
          <a href="/actualites" class="btn">Voir toutes les actualités</a>
        </footer>
      </div>
    </div>
  </article>
</Layout>

<style>
  .actualite-hero {
    position: relative;
    width: 100%;
    height: 400px;
    overflow: hidden;
    margin-bottom: var(--spacing-2xl);
  }

  .actualite-hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .actualite-hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, transparent 0%, rgba(10, 10, 10, 0.8) 100%);
  }

  .actualite-content {
    max-width: 800px;
    margin: 0 auto;
    padding-bottom: var(--spacing-2xl);
  }

  .actualite-back {
    margin-bottom: var(--spacing-xl);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-primary);
    gap: var(--spacing-sm);
  }

  .actualite-header {
    margin-bottom: var(--spacing-2xl);
    padding-bottom: var(--spacing-lg);
    border-bottom: 2px solid var(--color-border);
  }

  .actualite-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
    color: var(--color-primary);
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.05em;
  }

  .separator {
    color: var(--color-text-secondary);
  }

  .auteur {
    color: var(--color-text-secondary);
  }

  .actualite-title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
    font-weight: 700;
    position: relative;
    display: inline-block;
    padding-bottom: var(--spacing-sm);
  }

  .actualite-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 80px;
    height: 4px;
    background: var(--color-primary);
    border-radius: 2px;
  }

  .actualite-description {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .actualite-body {
    margin-bottom: var(--spacing-2xl);
  }

  /* Styles pour le contenu Markdown */
  .prose :global(h2) {
    color: var(--color-primary);
    font-size: 1.75rem;
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
  }

  .prose :global(h3) {
    color: var(--color-secondary);
    font-size: 1.5rem;
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
  }

  .prose :global(h4) {
    color: var(--color-text);
    font-size: 1.25rem;
    margin-top: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
  }

  .prose :global(p) {
    line-height: 1.8;
    margin-bottom: var(--spacing-md);
    color: var(--color-text-secondary);
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-left: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
    color: var(--color-text-secondary);
  }

  .prose :global(li) {
    margin-bottom: var(--spacing-xs);
    line-height: 1.7;
  }

  .prose :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  .prose :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-md);
    margin: var(--spacing-lg) 0;
    color: var(--color-text);
    font-style: italic;
  }

  .prose :global(code) {
    background: var(--color-dark-lighter);
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    color: var(--color-secondary);
  }

  .prose :global(pre) {
    background: var(--color-dark-lighter);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin-bottom: var(--spacing-md);
  }

  .prose :global(img) {
    border-radius: var(--radius-md);
    margin: var(--spacing-lg) 0;
  }

  .actualite-footer {
    text-align: center;
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--color-border);
  }

  @media (max-width: 768px) {
    .actualite-hero {
      height: 250px;
    }
  }
</style>
