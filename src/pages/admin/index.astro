</head>
<body>
  <!-- Chargement du CMS -->
  <script is:inline src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>

  <!-- Initialisation selon l'environnement -->
  <script is:inline>
    const isDev = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';

    if (isDev) {
      console.log('ðŸ› ï¸ MODE DÃ‰VELOPPEMENT - Backend test-repo');
    } else {
      console.log('ðŸš€ MODE PRODUCTION - Backend git-gateway');
    }

    // Gestion de l'authentification Netlify Identity
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        // Si pas d'utilisateur connectÃ© et qu'on est sur /admin, ouvrir le widget
        if (!user) {
          window.netlifyIdentity.open();
        }
      });

      // Redirection aprÃ¨s login/signup
      window.netlifyIdentity.on("login", () => {
        window.location.reload();
      });

      window.netlifyIdentity.on("signup", () => {
        window.location.reload();
      });

      // DÃ©connexion
      window.netlifyIdentity.on("logout", () => {
        window.location.href = "/";
      });
    }
  </script>
