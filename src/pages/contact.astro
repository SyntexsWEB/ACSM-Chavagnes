<style>
  .contact-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .contact-header h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    position: relative;
    display: inline-block;
    padding-bottom: var(--spacing-sm);
  }

  .contact-header h1::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 80px;
    height: 4px;
    background: var(--color-primary);
    border-radius: 2px;
  }

  .contact-header p {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--spacing-xl);
  }

  .contact-form-container h2 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-lg);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    margin-bottom: var(--spacing-xs);
    color: var(--color-text);
    font-weight: 500;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: var(--spacing-sm);
    background: var(--color-dark);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text);
    font-family: inherit;
    font-size: 1rem;
    transition: all var(--transition-fast);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px var(--shadow-primary-subtle);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .info-card h3 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
    font-size: 1.25rem;
  }

  .info-item {
    display: flex;
    gap: var(--spacing-md);
    padding: var(--spacing-md) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .info-item:last-child {
    border-bottom: none;
  }

  .info-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .info-item strong {
    display: block;
    color: var(--color-text);
    margin-bottom: 4px;
  }

  .info-item p {
    color: var(--color-text-secondary);
    margin: 0;
    font-size: 0.9rem;
  }

  .contact-detail {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-top: 4px;
  }

  .contact-detail svg {
    flex-shrink: 0;
    color: white;
  }

  .info-item a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .info-item a:hover {
    color: var(--color-primary-light);
    text-decoration: underline;
  }

  .horaires-link-container {
    margin-top: var(--spacing-md);
  }

  .horaires-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    transition: all var(--transition-fast);
    margin-top: var(--spacing-md);
  }

  .horaires-link:hover {
    text-decoration: underline;
    color: #c41e1e;
  }

  .checklist {
    list-style: none;
    padding: 0;
  }

  .checklist li {
    padding: var(--spacing-xs) 0;
    color: var(--color-text-secondary);
  }

  /* Help CTA Card - Style moderne */
  .help-cta-card {
    position: relative;
    margin-top: var(--spacing-3xl);
  }

  .help-cta-link {
    display: block;
    text-decoration: none;
    position: relative;
  }

  .help-cta-icon {
    position: absolute;
    top: -25px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 50px;
    background: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    z-index: 10;
    transition: all var(--transition-normal);
  }

  .help-cta-link:hover .help-cta-icon {
    transform: translateX(-50%) scale(1.2);
    box-shadow: 0 8px 25px rgba(185, 28, 28, 0.6);
  }

  .help-cta-content {
    background: var(--color-dark-lighter);
    border-radius: 20px;
    padding: 3.5rem 2rem 3rem;
    text-align: center;
    transition: all var(--transition-normal);
    border: 2px solid transparent;
  }

  .help-cta-link:hover .help-cta-content {
    border-color: var(--color-primary);
  }

  .help-cta-content h3 {
    font-size: clamp(1.5rem, 3vw, 2rem);
    margin-bottom: var(--spacing-md);
    color: white;
    font-weight: 900;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .help-cta-content p {
    font-size: 1rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
    line-height: 1.6;
  }

  .help-cta-button {
    display: flex;
    justify-content: center;
  }

  .btn-help-outline {
    display: inline-block;
    padding: 0.9rem 1.8rem;
    background: transparent;
    color: white;
    border: 2px solid white;
    border-radius: 25px;
    font-weight: 700;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all var(--transition-normal);
  }

  .help-cta-link:hover .btn-help-outline {
    background: white;
    color: var(--color-dark);
    transform: translateY(-2px);
  }

  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .contact-info {
      order: -1;
    }
  }
</style>
