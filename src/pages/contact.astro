---
import Layout from '../layouts/Layout.astro';
import HeroPage from '../components/HeroPage.astro';
import { getEntry } from 'astro:content';
import siteInfo from '../data/site-info.json';

const page = await getEntry('pages', 'contact');
if (!page) throw new Error('Page not found: contact');

const heroData = page.data.hero || {
  image: '/images/20250504_133808.jpg',
  titre: 'Contactez-nous',
  soustitre: 'Nous sommes à votre écoute'
};
---

<Layout
  titre={page.data.titre}
  description={page.data.description}
>
  <HeroPage
    titre={heroData.titre ?? 'Contactez-nous'}
    soustitre={heroData.soustitre ?? 'Nous sommes à votre écoute'}
    image={heroData.image}
  />

  <section class="section">
    <div class="container">
      <div class="contact-header" style="display: none;">
        <h1>Contactez-nous</h1>
        <p>Une question ? Besoin d'informations ? N'hésitez pas à nous contacter !</p>
      </div>

      <div class="contact-grid">
        <div class="contact-form-container card">
          <h2>Envoyez-nous un message</h2>
          <form class="contact-form" name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field">
            <input type="hidden" name="form-name" value="contact" />
            <p hidden>
              <label>
                Don't fill this out: <input name="bot-field" />
              </label>
            </p>

            <div class="form-group">
              <label for="nom">Nom complet *</label>
              <input type="text" id="nom" name="nom" required />
            </div>

            <div class="form-group">
              <label for="email">Email *</label>
              <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
              <label for="telephone">Téléphone</label>
              <input type="tel" id="telephone" name="telephone" />
            </div>

            <div class="form-group">
              <label for="sujet">Sujet *</label>
              <select id="sujet" name="sujet" required>
                <option value="">Sélectionnez un sujet</option>
                <option value="inscription">Inscription / Licence</option>
                <option value="ufolep">UFOLEP</option>
                <option value="horaires">Horaires et planning</option>
                <option value="tarifs">Tarifs</option>
                <option value="partenariat">Partenariat</option>
                <option value="autre">Autre question</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message">Message *</label>
              <textarea id="message" name="message" rows="6" required></textarea>
            </div>

            <button type="submit" class="btn">Envoyer le message</button>
          </form>
        </div>

        <div class="contact-info">
          <div class="info-card card">
            <h3>Contacts</h3>
            <div class="info-item">
              <div>
                <strong>Président</strong>
                <p>Mr Renault Pascal</p>
                <p>Téléphone : 07 49 24 03 62</p>
                <p>Email : <a href="mailto:pezotmickael@gmail.com">pezotmickael@gmail.com</a></p>
              </div>
            </div>
            <div class="info-item">
              <div>
                <strong>Responsable permanence</strong>
                <p>Grégoire Monchy</p>
                <p>Téléphone : 06 31 23 46 66</p>
              </div>
            </div>
            <div class="info-item">
              <div>
                <strong>Responsable FFM & UFOLEP</strong>
                <p>Margaux Raveau</p>
                <p>Téléphone : 07 87 92 52 61</p>
                <p>Email : <a href="mailto:margaux.raveau@hotmail.fr">margaux.raveau@hotmail.fr</a></p>
              </div>
            </div>
            <div class="info-item">
              <div>
                <strong>Responsable communication et presse</strong>
                <p>Fabrice Tulane</p>
                <p>Téléphone : 07 74 73 53 90</p>
                <p>Email : <a href="mailto:fabtulane@hotmail.com">fabtulane@hotmail.com</a></p>
              </div>
            </div>
          </div>

          <div class="info-card card">
            <h3>Informations pratiques</h3>
            {siteInfo.adresse && (
              <div class="info-item">
                <div>
                  <strong>Adresse du terrain</strong>
                  <p>{siteInfo.adresse}</p>
                </div>
              </div>
            )}
            <div class="info-item">
              <div>
                <strong>Horaires</strong>
                <p>{siteInfo.horaires.jours}</p>
                <p>Samedi: {siteInfo.horaires.samedi}</p>
                <p>Dimanche: {siteInfo.horaires.dimanche}</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="help-cta-card">
        <a href="/faq" class="help-cta-link">
          <div class="help-cta-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </div>
          <div class="help-cta-content">
            <h3>BESOIN D'AIDE ?</h3>
            <p>Consultez notre FAQ pour trouver rapidement des réponses à vos questions les plus fréquentes</p>
            <div class="help-cta-button">
              <span class="btn-help-outline">Consulter la FAQ</span>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .contact-header h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    position: relative;
    display: inline-block;
    padding-bottom: var(--spacing-sm);
  }

  .contact-header h1::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 80px;
    height: 4px;
    background: var(--color-primary);
    border-radius: 2px;
  }

  .contact-header p {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--spacing-xl);
  }

  .contact-form-container h2 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-lg);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    margin-bottom: var(--spacing-xs);
    color: var(--color-text);
    font-weight: 500;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: var(--spacing-sm);
    background: var(--color-dark);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text);
    font-family: inherit;
    font-size: 1rem;
    transition: all var(--transition-fast);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px var(--shadow-primary-subtle);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .info-card h3 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
    font-size: 1.25rem;
  }

  .info-item {
    display: flex;
    gap: var(--spacing-md);
    padding: var(--spacing-md) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .info-item:last-child {
    border-bottom: none;
  }

  .info-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .info-item strong {
    display: block;
    color: var(--color-text);
    margin-bottom: 4px;
  }

  .info-item p {
    color: var(--color-text-secondary);
    margin: 0;
    font-size: 0.9rem;
  }

  .info-item a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .info-item a:hover {
    color: var(--color-primary-light);
    text-decoration: underline;
  }

  .checklist {
    list-style: none;
    padding: 0;
  }

  .checklist li {
    padding: var(--spacing-xs) 0;
    color: var(--color-text-secondary);
  }

  /* Help CTA Card - Style moderne */
  .help-cta-card {
    position: relative;
    margin-top: var(--spacing-3xl);
  }

  .help-cta-link {
    display: block;
    text-decoration: none;
    position: relative;
  }

  .help-cta-icon {
    position: absolute;
    top: -25px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 50px;
    background: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    z-index: 10;
    transition: all var(--transition-normal);
  }

  .help-cta-link:hover .help-cta-icon {
    transform: translateX(-50%) scale(1.2);
    box-shadow: 0 8px 25px rgba(185, 28, 28, 0.6);
  }

  .help-cta-content {
    background: var(--color-dark-lighter);
    border-radius: 20px;
    padding: 3.5rem 2rem 3rem;
    text-align: center;
    transition: all var(--transition-normal);
    border: 2px solid transparent;
  }

  .help-cta-link:hover .help-cta-content {
    border-color: var(--color-primary);
  }

  .help-cta-content h3 {
    font-size: clamp(1.5rem, 3vw, 2rem);
    margin-bottom: var(--spacing-md);
    color: white;
    font-weight: 900;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .help-cta-content p {
    font-size: 1rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
    line-height: 1.6;
  }

  .help-cta-button {
    display: flex;
    justify-content: center;
  }

  .btn-help-outline {
    display: inline-block;
    padding: 0.9rem 1.8rem;
    background: transparent;
    color: white;
    border: 2px solid white;
    border-radius: 25px;
    font-weight: 700;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all var(--transition-normal);
  }

  .help-cta-link:hover .btn-help-outline {
    background: white;
    color: var(--color-dark);
    transform: translateY(-2px);
  }

  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .contact-info {
      order: -1;
    }
  }
</style>
