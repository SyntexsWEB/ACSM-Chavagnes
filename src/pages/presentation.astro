---
import Layout from '../layouts/Layout.astro';
import HeroPage from '../components/HeroPage.astro';
import PhotoGallery from '../components/PhotoGallery.astro';
import VideoGallery from '../components/VideoGallery.astro';
import { getEntry } from 'astro:content';
import siteInfo from '../data/site-info.json';

const page = await getEntry('pages', 'presentation');
if (!page) throw new Error('Page not found: presentation');
const { Content } = await page.render();

const heroData = page.data.hero || {
  image: '/images/vue-aerienne-terrain-1.jpg',
  titre: 'Présentation du terrain',
  soustitre: 'Découvrez notre circuit de motocross'
};
const galerieData = page.data.galerie;
---

<Layout
  titre={page.data.titre}
  description={page.data.description}
>
  <HeroPage
    titre={heroData.titre ?? 'Présentation du terrain'}
    soustitre={heroData.soustitre ?? 'Découvrez notre circuit de motocross'}
    image={heroData.image ?? '/images/vue-aerienne-terrain-1.jpg'}
  />

  <section class="section">
    <div class="container">
      <div class="content-grid">
        <div class="content-main markdown-content">
          <Content />
        </div>

        <aside class="sidebar">
          <div class="sidebar-card card">
            <h3>Infos pratiques</h3>
            <ul class="info-list">
              {siteInfo.adresse && <li><strong>Localisation</strong><br>{siteInfo.adresse}</li>}
              <li><strong>Tarif</strong><br>{siteInfo.tarif} la journée</li>
              <li><strong>Licence</strong><br>FFM acceptée</li>
              <li><strong>Ouverture</strong><br>{siteInfo.horaires.jours}</li>
            </ul>
          </div>

          <div class="sidebar-card card">
            <h3>Documents utiles</h3>
            <ul class="doc-list">
              <li><a href="/reglement">Règlement du terrain</a></li>
              <li><a href="/faq">FAQ - Questions fréquentes</a></li>
              <li><a href="/contact">Nous contacter</a></li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>

  {galerieData?.afficher && galerieData.photos && (
    <PhotoGallery
      photos={galerieData.photos}
      titre={galerieData.titre}
      description={galerieData.description}
    />
  )}

  <VideoGallery
    videos={[
      { src: "/videos/terrain1.mp4", poster: "/images/poster-terrain-1.webp", titre: "Le terrain en action" },
      { src: "/videos/terrain2.mp4", poster: "/images/poster-terrain-2.webp", titre: "Vue du circuit" },
      { src: "/videos/terrain3.mp4", poster: "/images/poster-terrain-3.webp", titre: "Vue aérienne du terrain dans son ensemble" }
    ]}
    titre="Vidéos"
    description="Découvrez notre terrain en action à travers ces vidéos"
  />

  <!-- Section CTA finale -->
  <section class="cta-section-final">
    <div class="container">
      <a href={siteInfo.cta_accueil?.bouton2_lien || "/contact"} class="cta-card-link">
        <div class="cta-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <line x1="7" y1="17" x2="17" y2="7"></line>
            <polyline points="7 7 17 7 17 17"></polyline>
          </svg>
        </div>
        <div class="cta-card">
          <h2>{siteInfo.cta_accueil?.titre || "Prêt à rouler ?"}</h2>
          <p>{siteInfo.cta_accueil?.description || "Rejoignez-nous sur le terrain et vivez votre passion du motocross !"}</p>
          <div class="cta-buttons">
            <span class="btn-cta-outline">{siteInfo.cta_accueil?.bouton2_texte || "Nous contacter"}</span>
          </div>
        </div>
      </a>
    </div>
  </section>
</Layout>

<style>
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: var(--spacing-xl);
    margin-top: var(--spacing-xl);
  }

  .markdown-content :global(h2) {
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
    margin-top: var(--spacing-xl);
  }

  .markdown-content :global(h3) {
    color: var(--color-primary-light);
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
  }

  .markdown-content :global(h4) {
    color: var(--color-text);
    margin-top: var(--spacing-lg);
  }

  .markdown-content :global(p) {
    line-height: 1.8;
    margin-bottom: var(--spacing-md);
  }

  .markdown-content :global(ul),
  .markdown-content :global(ol) {
    margin: var(--spacing-md) 0;
    padding-left: var(--spacing-lg);
    line-height: 1.8;
  }

  .markdown-content :global(li) {
    margin-bottom: var(--spacing-xs);
  }

  .markdown-content :global(strong) {
    color: var(--color-text);
  }

  .markdown-content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .markdown-content :global(a:hover) {
    color: var(--color-primary-light);
  }

  .content-main h2 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .content-main h3 {
    color: var(--color-primary-light);
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
  }

  .content-main h4 {
    color: var(--color-text);
  }

  .content-main p {
    line-height: 1.8;
    margin-bottom: var(--spacing-md);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
    margin: var(--spacing-xl) 0;
  }

  .feature {
    padding: var(--spacing-md);
    background: var(--color-dark-lighter);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
  }

  .feature h4 {
    margin-bottom: var(--spacing-xs);
    font-size: 1.1rem;
  }

  .feature p {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin: 0;
  }

  .schedule-box {
    margin-top: var(--spacing-xl);
  }

  .schedule-box h4 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .schedule-item {
    padding: var(--spacing-md);
    background: var(--color-dark);
    border-radius: var(--radius-sm);
    margin-bottom: var(--spacing-md);
  }

  .schedule-item strong {
    color: var(--color-text);
    display: block;
    margin-bottom: var(--spacing-xs);
  }

  .schedule-item p {
    margin: 0;
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  .schedule-item .time {
    color: var(--color-primary);
    font-weight: 600;
    margin-top: var(--spacing-xs);
  }

  .sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .sidebar-card h3 {
    color: var(--color-primary);
    font-size: 1.25rem;
    margin-bottom: var(--spacing-md);
  }

  .info-list {
    list-style: none;
  }

  .info-list li {
    padding: var(--spacing-sm) 0;
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text-secondary);
  }

  .info-list li:last-child {
    border-bottom: none;
  }

  .info-list strong {
    color: var(--color-text);
    display: block;
    margin-bottom: 4px;
  }

  .doc-list {
    list-style: none;
  }

  .doc-list li {
    margin-bottom: var(--spacing-sm);
  }

  .doc-list a {
    color: var(--color-text-secondary);
    display: block;
    padding: var(--spacing-sm);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .doc-list a:hover {
    background: var(--color-dark);
    color: var(--color-primary);
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .content-grid {
      grid-template-columns: 1fr;
    }

    .sidebar {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Section CTA finale */
  .cta-section-final {
    background: var(--color-dark);
    padding: var(--spacing-2xl) 0 var(--spacing-lg) 0;
  }

  .cta-card-link {
    display: block;
    text-decoration: none;
    position: relative;
  }

  .cta-icon {
    position: absolute;
    top: -25px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 50px;
    background: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    z-index: 10;
    transition: all var(--transition-normal);
  }

  .cta-card-link:hover .cta-icon {
    transform: translateX(-50%) scale(1.2);
    box-shadow: 0 8px 25px rgba(185, 28, 28, 0.6);
  }

  .cta-card {
    background: var(--color-dark-lighter);
    border-radius: 20px;
    padding: clamp(3.5rem, 8vw, 5rem) clamp(2rem, 5vw, 5rem) clamp(3rem, 8vw, 5rem);
    text-align: center;
    transition: all var(--transition-normal);
    border: 2px solid transparent;
  }

  .cta-card-link:hover .cta-card {
    border-color: var(--color-primary);
  }

  .cta-card h2 {
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    margin-bottom: var(--spacing-lg);
    color: white;
    font-weight: 900;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .cta-card p {
    font-size: clamp(1rem, 2vw, 1.15rem);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-cta-outline {
    display: inline-block;
    padding: 0.9rem 1.8rem;
    background: transparent;
    color: white;
    border: 2px solid white;
    border-radius: 25px;
    font-weight: 700;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all var(--transition-normal);
  }

  .cta-card-link:hover .btn-cta-outline {
    background: white;
    color: var(--color-dark);
    transform: translateY(-2px);
  }
</style>
